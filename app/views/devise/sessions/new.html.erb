<div class="container">
  <div id="login-wraper">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => '' }) do |f| %>
      <legend>Sign in to <span class="blue">Your issu</span></legend>
        <div class="body">
          <label><%= f.input :email, :autofocus => true %></label>
          <label><%= f.input :password %></label>
        </div>
        <div class="footer">
          <label class="checkbox inline">
            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?  %>
          </label>
        <%= f.button :submit, "Sign in", :class => 'btn btn-success' %>
      </div>
    <% end %>
   <%= render "devise/shared/links" %>
  </div>
</div>
<footer class="white navbar-fixed-bottom">
      Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name), :class => 'btn btn-black'%>       
</footer>